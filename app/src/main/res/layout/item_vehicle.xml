<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_grey"
    android:padding="8dp">

    <!-- Nome do veículo -->
    <TextView
        android:id="@+id/tvVehicleName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome do Veículo"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Detalhes do veículo -->
    <TextView
        android:id="@+id/tvVehicleDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Detalhes do Veículo"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvVehicleName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botão para selecionar o veículo -->
    <Button
        android:id="@+id/btnSelectVehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple"
        android:text="Selecionar"
        app:layout_constraintTop_toBottomOf="@id/tvVehicleDetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
